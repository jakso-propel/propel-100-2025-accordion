  ];

  document.addEventListener('DOMContentLoaded', function() {
    const container = document.getElementById('accordion-list');

    // Function to generate the HTML for a single accordion item
    const generateAccordionItem = (person) => {
      return `
        <div class="accordion-item">
          <div class="accordion-header">
            <div class="name-col">${person.name}</div>
            <div class="company-col">${person.company}</div>
            <div class="role-col">${person.role}</div>
            <div class="arrow-col"><span class="material-symbols-outlined chevron-icon">chevron_right</span></div>
          </div>
          <div class="accordion-content">
            <div class="person-details">
              <img src="${person.image_url}" alt="Photo of ${person.name}">
              <div class="person-info">
                <h3>${person.name}</h3>
                <p>${person.blurb}</p>
              </div>
            </div>
          </div>
        </div>
      `;
    };

    // Loop through the data and add each item to the container
    people.forEach(person => {
      container.insertAdjacentHTML('beforeend', generateAccordionItem(person));
    });

    // Re-apply the accordion functionality to the newly created elements
    const headers = document.querySelectorAll('.accordion-header');

    headers.forEach(header => {
      header.addEventListener('click', function() {
        headers.forEach(otherHeader => {
          if (otherHeader !== this && otherHeader.classList.contains('active')) {
            otherHeader.classList.remove('active');
            otherHeader.nextElementSibling.classList.remove('open');
          }
        });

        this.classList.toggle('active');
        const content = this.nextElementSibling;
        if (content.classList.contains('open')) {
          content.classList.remove('open');
        } else {
          content.classList.add('open');
        }
      });
    });
  });
</script>

</body>
</html>
